<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/student_list_background"
    android:id="@+id/container"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@drawable/loading_shape"
        android:layout_margin="4dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/student_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginBottom="5sp"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_delete_outline_24"
                android:contentDescription="@string/delete"
                android:background="@android:color/transparent"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/student_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Division"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/student_roll_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roll_background"
            android:paddingRight="5dp"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            app:drawableLeftCompat="@drawable/ic_school_black_24dp" />

        <TextView
            android:id="@+id/student_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Class"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>